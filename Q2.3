#Calculate a largest number in a given list

def finder(data):
    return finder_rec(data, len(data)-1)

def finder_rec (data,x):
    LNumber = data[x]
    while x > 0:
        x = x-1
        value = data[x]
        if value > LNumber :
            LNumber = value
    return LNumber        
        
